@model StringResourceModel
@{
    Model.Header.Title = ResMan.GetString("StringResource_AddNew");
    Layout = "~/Views/Shared/_Admin.cshtml";
    Model.Header.PopupPage = true;
}
<div style="height:300px;">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.Id)

        if (Model.Id > 0)
        {
            @Html.FormLineEditorFor(m => m.CultureCode, new { htmlAttributes = new { @readonly = true } })
            @Html.FormLineEditorFor(m => m.Name, new { htmlAttributes = new { @readonly = true } })
        }
        else
        {
            @Html.FormLineDropDownListFor(m => m.CultureCode, Model.CultureCodeList)
            @Html.FormLineEditorFor(m => m.Name)
        }
        @Html.FormLineEditorFor(m => m.Value)
        @Html.FormLineEditorFor(m => m.AvailableOnClientSide)

        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10 form-button-wrapper">
                <button type="submit" class="btn btn-primary btn-block btn-flat">@ResMan.GetString("Save")</button>
            </div>
        </div>
    }
</div>