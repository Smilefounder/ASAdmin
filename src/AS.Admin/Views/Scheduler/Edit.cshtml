@model JobDefinitionModel
@{
    Model.Header.Title = ResMan.GetString("Roles_AddNew");
    Layout = "~/Views/Shared/_Admin.cshtml";
    Model.Header.PopupPage = true;
    Model.Header.DisplayDisabledOnDemoMessage = true;
}
<div style="height:600px;">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.Id)
        @Html.FormLineEditorFor(m => m.Name)
        @Html.FormLineDropDownListFor(m => m.JobTypeName, Model.JobTypeSelectList)
        @Html.FormLineEditorFor(m => m.RunInterval)

        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10 form-button-wrapper">
                <button type="submit" class="btn btn-primary btn-block btn-flat">@ResMan.GetString("Save")</button>
            </div>
        </div>

    }
</div>