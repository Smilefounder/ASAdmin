@model ASModelBase
@{
    Layout = "~/Views/Shared/_Public.cshtml";
    Model.Header.Title = "500";
}
<div class="error-page">
    <h2 class="headline text-red">500</h2>
    <div class="error-content">
        <h3><i class="fa fa-warning text-red"></i>@ResMan.GetString("ErrorMessage_UnexpectedError")</h3>
        <p>
            @Html.Raw(ResMan.GetString("ErrorMessage_UnexpectedErrorPublicBody"))
        </p>
    </div>
</div>
<script type="text/javascript">
    jQuery(document).ready(function () {
        $("#demoUserInfo").hide();
    });
</script>