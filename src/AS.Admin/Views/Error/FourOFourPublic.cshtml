@model ASModelBase
@{
    Model.Header.Title = "404";
    Layout = "~/Views/Shared/_Public.cshtml";
}
<div class="error-page">
    <h2 class="headline text-yellow"> 404</h2>
    <div class="error-content">
        <h3><i class="fa fa-warning text-yellow"></i>@ResMan.GetString("ErrorMessage_PageNotFound")</h3>
        <p>
            @Html.Raw(ResMan.GetString("ErrorMessage_PageNotFoundPublicBody"))
        </p>
    </div>
</div>

<script type="text/javascript">
    jQuery(document).ready(function () {
        $("#demoUserInfo").hide();
    });
</script>