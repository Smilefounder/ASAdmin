@model UserModel
@{
    Model.Header.Title = ResMan.GetString("Roles_AddNew");
    Layout = "~/Views/Shared/_Admin.cshtml";
    Model.Header.PopupPage = true;
}
@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Id)
    @Html.FormLineEditorFor(m => m.UserName)
    @Html.FormLineEditorFor(m => m.Password)
    @Html.FormLineEditorFor(m => m.PasswordRepeat)
    @Html.FormLineEditorFor(m => m.Email)
    @Html.FormLineDropDownListFor(model => model.Roles, Model.RoleSelectList,
       new { size = 5, style = "width:100%;" })

    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10 form-button-wrapper">
            <button type="submit" class="btn btn-primary btn-block btn-flat">@ResMan.GetString("Save")</button>
        </div>
    </div>
}